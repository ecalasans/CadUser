<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.pds2016.caduser.Cadastro"
    android:background="@drawable/backcadastro"
    android:foregroundGravity="top">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:isScrollContainer="true"
        android:paddingTop="130sp"
        android:gravity="top">


        <TextView
            android:text="Preencha os campos abaixo:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="15sp"
            android:textColor="@color/laranjaStyle"
            android:textSize="20sp" />

        <TextView
            android:text="Nome:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="@color/laranjaStyle"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />

        <EditText
            android:layout_width="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:layout_toRightOf="@+id/textView9"
            android:id="@+id/etNasc"
            android:gravity="bottom"
            android:textAlignment="gravity"
            android:textSize="14sp"
            android:textColor="@color/verdeStyle"
            android:layout_height="34sp"
            android:layout_marginTop="5sp"
            android:layout_below="@+id/etNome" />

        <TextView
            android:text="clique na câmera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_below="@+id/btFoto"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Rua:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginTop="15dp"
            android:id="@+id/textView5"
            android:textColor="@color/laranjaStyle" />

        <EditText
            android:layout_width="wrap_content"
            android:inputType="textPersonName"
            android:ems="17"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5"
            android:id="@+id/etRua"
            android:textSize="14sp"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_marginLeft="12dp"
            android:gravity="bottom"
            android:textAlignment="gravity"
            android:layout_height="34sp" />

        <TextView
            android:text="Nº:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:id="@+id/textView6"
            android:layout_marginTop="25dp"
            android:textColor="@color/laranjaStyle" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:inputType="number"
            android:ems="5"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:layout_toEndOf="@+id/textView6"
            android:layout_marginLeft="12sp"
            android:textSize="14sp"
            android:id="@+id/etN"
            android:gravity="bottom"
            android:textAlignment="gravity" />

        <TextView
            android:text="Bairro:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:id="@+id/textView8"
            android:layout_marginTop="25sp"
            android:textColor="@color/laranjaStyle" />

        <TextView
            android:text="Cidade:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:id="@+id/textView9"
            android:layout_alignStart="@+id/textView8"
            android:layout_marginTop="25sp"
            android:textColor="@color/laranjaStyle" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="34sp"
            android:inputType="textPersonName"
            android:ems="8"
            android:id="@+id/etCidade"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_toEndOf="@+id/textView9"
            android:textSize="14sp"
            android:layout_marginLeft="12sp"
            android:gravity="bottom"
            android:textAlignment="gravity" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="34sp"
            android:inputType="textPersonName"
            android:ems="16"
            android:id="@+id/etBairro"
            android:textSize="14sp"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_toRightOf="@+id/textView4"
            android:layout_marginLeft="12sp" />

        <EditText
            android:inputType="textPersonName"
            android:ems="16"
            android:id="@+id/etNome"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:textAlignment="gravity"
            android:gravity="bottom"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignLeft="@+id/etBairro"
            android:layout_alignStart="@+id/etBairro"
            android:layout_height="34sp" />

        <TextView
            android:text="Estado:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_alignBaseline="@+id/etCidade"
            android:layout_alignBottom="@+id/etCidade"
            android:layout_toRightOf="@+id/etCidade"
            android:layout_toEndOf="@+id/etCidade"
            android:layout_marginLeft="6sp"
            android:textColor="@color/laranjaStyle" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:inputType="number"
            android:ems="9"
            android:id="@+id/etCEP"
            android:textSize="14sp"
            android:textAlignment="gravity"
            android:gravity="bottom"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignRight="@+id/etRua"
            android:layout_alignEnd="@+id/etRua" />

        <TextView
            android:text="Celular:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9"
            android:id="@+id/textView11"
            android:layout_marginTop="25dp"
            android:textColor="@color/laranjaStyle"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/textView9" />

        <TextView
            android:text="Residencial:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_below="@+id/textView11"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11"
            android:textColor="@color/laranjaStyle"
            android:layout_marginTop="25sp" />

        <TextView
            android:text="CEP:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textColor="@color/laranjaStyle"
            android:layout_alignBaseline="@+id/etN"
            android:layout_alignBottom="@+id/etN"
            android:layout_toLeftOf="@+id/etCEP"
            android:layout_toStartOf="@+id/etCEP"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="34sp"
            android:inputType="phone"
            android:ems="8"
            android:layout_toRightOf="@+id/textView12"
            android:layout_toEndOf="@+id/textView12"
            android:id="@+id/etRes"
            android:layout_marginLeft="12sp"
            android:layout_alignBaseline="@+id/textView12"
            android:textAlignment="gravity"
            android:gravity="bottom"
            android:textSize="14sp" />

        <TextView
            android:text="email:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignStart="@+id/textView12"
            android:id="@+id/textView13"
            android:textColor="@color/laranjaStyle"
            android:layout_marginTop="25sp"
            android:layout_below="@+id/textView12" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="34sp"
            android:inputType="textPersonName"
            android:ems="4"
            android:id="@+id/etEstado"
            android:textSize="14sp"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignRight="@+id/etBairro"
            android:layout_alignEnd="@+id/etBairro"
            android:textAlignment="gravity"
            android:gravity="bottom" />

        <EditText
            android:layout_width="wrap_content"
            android:inputType="phone"
            android:ems="8"
            android:id="@+id/etCel"
            android:layout_height="34sp"
            android:textSize="14sp"
            android:gravity="bottom"
            android:textAlignment="gravity"
            android:layout_alignBaseline="@+id/textView11"
            android:layout_alignBottom="@+id/textView11"
            android:layout_alignLeft="@+id/etCidade"
            android:layout_alignStart="@+id/etCidade" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="34sp"
            android:inputType="textEmailAddress"
            android:ems="16"
            android:id="@+id/etEmail"
            android:textSize="14sp"
            android:gravity="bottom"
            android:textAlignment="gravity"
            android:layout_alignBaseline="@+id/textView13"
            android:layout_alignBottom="@+id/textView13"
            android:layout_alignRight="@+id/etEstado"
            android:layout_alignEnd="@+id/etEstado" />

        <TextView
            android:text="Login:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView13"
            android:id="@+id/textView14"
            android:textColor="@color/laranjaStyle"
            android:layout_alignLeft="@+id/textView13"
            android:layout_marginLeft="80sp"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="34sp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etLogin"
            android:textSize="14sp"
            android:layout_alignParentBottom="false"
            android:layout_toRightOf="@+id/textView14"
            android:layout_toEndOf="@+id/textView14"
            android:layout_alignBaseline="@+id/textView14"
            android:layout_marginLeft="12sp"
            android:gravity="bottom"
            android:textAlignment="gravity" />

        <TextView
            android:text="Senha:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView14"
            android:layout_alignLeft="@+id/textView14"
            android:layout_alignStart="@+id/textView14"
            android:id="@+id/textView15"
            android:textColor="@color/laranjaStyle"
            android:layout_marginTop="25sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="34sp"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/etLogin"
            android:layout_alignLeft="@+id/etLogin"
            android:layout_alignStart="@+id/etLogin"
            android:id="@+id/etSenha"
            android:layout_alignBaseline="@+id/textView15"
            android:textSize="14sp"
            android:textAlignment="gravity"
            android:gravity="bottom" />

        <TextView
            android:text="Confirma senha:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView15"
            android:layout_alignRight="@+id/textView15"
            android:layout_alignEnd="@+id/textView15"
            android:id="@+id/textView16"
            android:layout_marginTop="25sp"
            android:textColor="@color/laranjaStyle"
            android:layout_alignLeft="@+id/etCel"
            android:layout_alignStart="@+id/etCel"
            android:gravity="right" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="34sp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etConf"
            android:textSize="14sp"
            android:layout_alignBottom="@+id/textView16"
            android:layout_alignLeft="@+id/etSenha"
            android:layout_alignStart="@+id/etSenha" />

        <TextView
            android:text="Enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btEnviar"
            android:textColor="@color/verdeStyle"
            android:textSize="26sp"
            android:textStyle="normal|bold"
            android:layout_marginTop="60dp"
            android:layout_alignTop="@+id/textView16"
            android:layout_alignLeft="@+id/textView16"
            android:layout_alignStart="@+id/textView16"
            android:clickable="true"
            android:onClick="insere" />

        <TextView
            android:text="Limpar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/verdeStyle"
            android:textSize="26sp"
            android:textStyle="normal|bold"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/btEnviar"
            android:layout_toEndOf="@+id/btEnviar"
            android:layout_marginLeft="30sp" />

        <ImageView
            android:src="@drawable/camera"
            android:layout_width="70sp"
            android:layout_height="94sp"
            android:id="@+id/btFoto"
            android:clickable="true"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/etNasc"
            android:onClick="tirarFoto" />

        <TextView
            android:text="Nasc.:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etNome"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:id="@+id/textView18"
            android:textColor="@color/laranjaStyle"
            android:layout_marginTop="12sp" />

    </RelativeLayout>


</ScrollView>
