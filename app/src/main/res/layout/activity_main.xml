<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pds2016.caduser.Main"
    android:background="@drawable/back3"
    android:gravity="fill_vertical"
    android:onClick="limparCampos">


    <TextView
        android:text="Login:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/txtLogin"
        android:layout_marginTop="220dp"
        android:textSize="18sp"
        android:textColor="@color/laranjaStyle" />

    <TextView
        android:text="Senha:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:textSize="18sp"
        android:textColor="@color/laranjaStyle"
        android:id="@+id/txtSenha"
        android:layout_below="@+id/etLogin"
        android:layout_alignLeft="@+id/etSenha"
        android:layout_alignStart="@+id/etSenha" />

    <TextView
        android:text="Limpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/btLimpar"
        android:textColor="@color/verdeStyle"
        android:textSize="25sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/btLogin"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textPersonName"
        android:ems="16"
        android:id="@+id/etLogin"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="bottom|center_vertical"
        android:layout_height="35sp"
        android:lines="1"
        android:layout_below="@+id/txtLogin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="seu login" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:ems="16"
        android:layout_marginTop="11dp"
        android:id="@+id/etSenha"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:textColor="@android:color/darker_gray"
        android:gravity="bottom"
        android:lines="1"
        android:layout_below="@+id/txtSenha"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="sua senha" />

    <TextView
        android:text="Entrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:clickable="true"
        android:id="@+id/btLogin"
        android:textSize="25sp"
        android:textColor="@color/verdeStyle"
        android:textStyle="normal|bold"
        android:onClick="efetuaLogin"
        android:layout_below="@+id/etSenha"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
