<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalhe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pds2016.caduser.Detalhe"
    android:background="@drawable/backcadastro">

    <ImageView
        android:src="@drawable/camera"
        android:layout_width="118sp"
        android:layout_height="157sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:id="@+id/imageView2" />

    <TextView
        android:text="Fulano de Tal dos Anzois"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/txtNome"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/laranjaStyle"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Rua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNasc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="11dp"
        android:id="@+id/txtRua"
        android:textColor="@color/verdeStyle" />

    <TextView
        android:text="NÂº."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRua"
        android:layout_alignLeft="@+id/txtRua"
        android:layout_alignStart="@+id/txtRua"
        android:id="@+id/txtN"
        android:layout_marginTop="7sp"
        android:textColor="@color/verdeStyle" />

    <TextView
        android:text="Bairro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtN"
        android:layout_alignLeft="@+id/txtNome"
        android:layout_alignStart="@+id/txtNome"
        android:id="@+id/txtBairro"
        android:textColor="@color/verdeStyle" />

    <TextView
        android:text="CEP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtBairro"
        android:layout_toRightOf="@+id/txtNasc"
        android:layout_toEndOf="@+id/txtNasc"
        android:id="@+id/txtCEP"
        android:textColor="@color/verdeStyle" />

    <TextView
        android:text="Cidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtN"
        android:layout_alignLeft="@+id/txtN"
        android:layout_alignStart="@+id/txtN"
        android:layout_marginTop="7sp"
        android:id="@+id/txtCidade"
        android:textColor="@color/verdeStyle" />

    <TextView
        android:text="Estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtCidade"
        android:layout_toRightOf="@+id/txtCEP"
        android:layout_toEndOf="@+id/txtCEP"
        android:id="@+id/txtEstado"
        android:textColor="@color/verdeStyle" />

    <TextView
        android:text="email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEstado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/txtEmail"
        android:textColor="@color/verdeStyle"
        android:textStyle="normal|italic" />

    <TextView
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/btVoltar"
        android:textStyle="normal|bold"
        android:textColor="@color/verdeStyle"
        android:textSize="25sp"
        android:clickable="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNasc"
        android:textSize="12sp"
        android:textColor="@color/verdeStyle"
        android:layout_below="@+id/txtNome"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
